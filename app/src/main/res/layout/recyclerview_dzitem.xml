<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

    >
<com.zhy.autolayout.AutoRelativeLayout
    android:layout_centerHorizontal="true"
    android:layout_width="680px"
    android:layout_height="220px">
   <TextView
       android:id="@+id/tv_rcview_item"
       android:text="张三"
       android:textSize="24px"
       android:textColor="@color/yinc"
       android:layout_marginTop="32px"
       android:layout_marginLeft="20px"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
    <TextView

        android:layout_marginTop="32px"
        android:text="13526683939"
        android:layout_marginLeft="30px"
        android:layout_toRightOf="@id/tv_rcview_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_review_itme_dizhi"
        android:layout_below="@id/tv_rcview_item"
        android:layout_marginTop="26px"
        android:textColor="@color/yinc"
        android:textSize="24px"
        android:layout_marginLeft="20px"
        android:text="首都北京上地大道"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
   
<com.zhy.autolayout.AutoRelativeLayout
    android:layout_below="@id/tv_review_itme_dizhi"
    android:layout_marginTop="64px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RadioButton
        android:drawableLeft="@drawable/moren_dizhi"
       
        android:text="设置默认地址"
        android:button="@null"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/autulayout_reviewitme_delete"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="20px"
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_toLeftOf="@id/autulayout_reviewitme_delete"
        android:layout_marginRight="26px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/bianji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="编辑"
            android:textSize="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>
    <View
      style="@style/view_kuan"
        />
</com.zhy.autolayout.AutoRelativeLayout>
