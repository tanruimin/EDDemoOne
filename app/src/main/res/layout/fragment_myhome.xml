<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             >
    <com.youth.banner.Banner
        android:id="@+id/banner_myhome"
        android:layout_width="match_parent"
        android:layout_height="400px"
        app:indicator_margin="14px"
        app:indicator_width="12px"
        app:indicator_drawable_unselected="@drawable/myhome_banner_unselect"
        app:indicator_drawable_selected="@drawable/myhome_banner_select"
        app:indicator_height="12px"/>


<com.zhy.autolayout.AutoLinearLayout
   style="@style/match_wrap"
    android:orientation="vertical"
    android:layout_marginTop="54px"
    android:layout_marginLeft="50px"

    android:layout_marginRight="50px">

<com.zhy.autolayout.AutoLinearLayout
    style="@style/match_wrap"
    android:gravity="center_horizontal">

    <ImageView
     style="@style/wrap"
     android:background="@mipmap/shangcheng"/>

    <ImageView
     style="@style/wrap"
     android:background="@mipmap/nnnn"
        android:layout_marginLeft="100px"/>

    <ImageView
     style="@style/wrap"
     android:background="@mipmap/erweima"
     android:layout_marginLeft="100px"
        />

    <ImageView
     style="@style/wrap"
     android:layout_marginLeft="100px"
     android:background="@mipmap/lishi"/>

</com.zhy.autolayout.AutoLinearLayout>

<com.zhy.autolayout.AutoLinearLayout
    style="@style/match_wrap">

</com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
