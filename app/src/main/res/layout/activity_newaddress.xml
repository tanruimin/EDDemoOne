<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
<com.zhy.autolayout.AutoRelativeLayout
    android:id="@+id/auutu_newaddress"
  style="@style/auturelayout"
    >
    <com.zhy.autolayout.AutoRelativeLayout
       style="@style/auturelayout_nbu"
        >
        <ImageView
            style="@style/image_autula_nbu"
            />
        <TextView
            android:text="新增收货地址"
          style="@style/Textview_auturela_nbu"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_below="@id/auutu_newaddress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/viewba"
        >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View
            style="@style/view_kuan"
           />
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/autulayou_xinzdizhi"
            android:layout_width="680px"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
     <com.zhy.autolayout.AutoLinearLayout
         android:layout_width="match_parent"
         android:layout_height="100px">
         <TextView
             android:layout_marginTop="37px"
             android:textSize="26px"
             android:textColor="@color/yinc"
             android:paddingLeft="10px"
             android:text="收货人"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             />
            <EditText
                android:layout_marginTop="37px"

                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
     </com.zhy.autolayout.AutoLinearLayout>
            <View
                style="@style/view_address"
               />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px">
                <TextView
                    android:layout_marginTop="37px"
                    android:textSize="26px"
                    android:textColor="@color/yinc"
                    android:paddingLeft="10px"
                    android:text="联系方式"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />
                <EditText
                    android:layout_marginTop="37px"

                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                style="@style/view_address"
                />
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px">
                <TextView
                    android:id="@+id/tv_newaddress_diqu"
                    android:layout_marginTop="37px"
                    android:textSize="26px"
                    android:textColor="@color/yinc"
                    android:paddingLeft="10px"
                    android:text="所在地区"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />
                <EditText
                    android:layout_marginTop="37px"
                    android:layout_toRightOf="@id/tv_newaddress_diqu"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
           <ImageView
               android:layout_alignParentRight="true"
               android:layout_marginTop="28px"
               android:src="@drawable/more"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <View
                style="@style/view_address"
                />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px">
                <TextView
                    android:layout_marginTop="37px"
                    android:textSize="26px"
                    android:textColor="@color/yinc"
                    android:paddingLeft="10px"
                    android:text="详情地址"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />
                <EditText
                    android:layout_marginTop="37px"

                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                style="@style/view_address"
                />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px">
            <RadioButton
                android:layout_marginTop="37px"
                 android:textColor="@color/rebutton"
                android:drawableLeft="@drawable/moren_dizhi"
                android:button="@null"
                android:text="设置默认地址"
                android:textSize="24px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
        <Button
            android:id="@+id/but_shouhuo_refer"
            android:background="@drawable/but_yuanjiao"
            android:textSize="28px"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:text="保存地址"
            android:layout_marginTop="75px"
            android:layout_width="680px"
            android:layout_height="70px"/>
    </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>
